generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Broth {
  id            Int     @id @default(autoincrement())
  imageInactive String
  imageActive   String
  name          String
  description   String
  price         Decimal
}

model Protein {
  id            Int     @id @default(autoincrement())
  imageInactive String
  imageActive   String
  name          String
  description   String
  price         Decimal
}

model Order {
  id          Int    @id
  description String
  image       String
}
